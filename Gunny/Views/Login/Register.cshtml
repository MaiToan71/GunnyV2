@model Gunny.Models.InformationMemAccount.UserRegister

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Login.cshtml";
}


@using (Html.BeginForm("PostRegister", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @if (@TempData["AlerMessageError"] != null)
    {
        <div class="alert alert-danger" role="alert" style="display: flex; justify-content: center; width: 100%; }">
            @TempData["AlerMessageError"]
        </div>
    }
    @if (@TempData["SucessMessageAccount"] != null)
    {
        <div class="alert alert-success" role="alert" style="display: flex; justify-content: center; width: 100%; }">
            @TempData["SucessMessageAccount"]
        </div>
    }
    <div class="cont">

        <div class="form sign-in" style="margin-top:-30px;">
            <div class="text-center mb-10">
                <h1 class="text-dark mb-3">Đăng ký tài khoản   </h1>
            </div>
            <div class="fv-row mb-10">
                <label class="form-label fs-6 fw-bolder text-dark">Biệt danh</label>
                @Html.TextBoxFor(m => m.Nickname, "", new { @class = "form-control", @placeholder = "" })
            </div>
            <div class="fv-row mb-10">
                <label class="form-label fs-6 fw-bolder text-dark">Tài khoản đăng nhập</label>
                @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "" })
            </div>
            <div class="fv-row mb-10">
                <label class="form-label fs-6 fw-bolder text-dark">
                    Mật khẩu
                </label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "" })
            </div>
            <div class="fv-row mb-10">
                <label class="form-label fs-6 fw-bolder text-dark">Nhập  mật khẩu 2</label>
                @Html.PasswordFor(m => m.Password2, new { @class = "form-control", @placeholder = "" })
            </div>
            <div class="text-center">
                <button type="submit" class="submit btn btn-lg btn-primary w-100 mb-5">Đăng ký</button>
            </div>
            <div>
                <a href="/dang-nhap" style=" display: flex; justify-content: center;">Quay lại</a>
            </div>
        </div>


    </div>
}